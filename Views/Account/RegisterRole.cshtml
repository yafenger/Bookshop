@model Bookshop_CATeam11.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}

<h2>RegisterRole</h2>
@using (Html.BeginForm("RegisterRole","Account",FormMethod.Post,new { @class = "form-horizontal", role = "form" }))
{
<div class="form-horizontal">
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
   

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Select Role", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UserName", null, new { @class = "form-control" })
        </div>
    </div>

    <!--select the role type for the user-->
    <div class="form-group">
        @Html.Label("Select User ", new { @class = "control-label col-md-2 " })
        <div class="col-lg-10">
            @Html.DropDownList("Name", null, new { @class = "form-control" })
        </div>
    </div>

    <!--Ends Here-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
</div>

}
<div>
    @Html.ActionLink("Back to List", "Index", "Role")
</div>
@section Scripts {@Scripts.Render("~/bundles/jqueryval")}